#
# Uses a custom configuration.
# See also: https://yamllint.readthedocs.io/en/stable/configuration.html#default-configuration
#
# By default the script will exit with a return code 1 only when there is one or more error(s).
# See also https://yamllint.readthedocs.io/en/stable/configuration.html#errors-and-warnings
#

yaml-files:
  - "*.yaml"
  - "*.yml"
  - ".yamllint"

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets: enable
  colons: enable
  commas: enable
  comments:
    require-starting-space: true
    ignore-shebangs: true
    min-spaces-from-content: 1
  comments-indentation: enable
  document-end: disable
  document-start: disable
  empty-lines: enable
  empty-values: disable
  float-values: disable
  hyphens: enable
  indentation:
    spaces: consistent
    indent-sequences: consistent
    check-multi-line-strings: false
  key-duplicates: enable
  key-ordering: disable
  line-length:
    level: warning
    max: 150
    allow-non-breakable-inline-mappings: true
  new-line-at-end-of-file: enable
  new-lines: disable
  octal-values: disable
  quoted-strings:
    quote-type: double
    required: only-when-needed
    extra-required: []
    extra-allowed: []
    allow-quoted-quotes: false
  trailing-spaces: enable
  truthy: disable
