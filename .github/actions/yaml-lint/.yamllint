#
# Extends default configuration.
# See also: https://yamllint.readthedocs.io/en/stable/configuration.html#default-configuration
#
# By default the script will exit with a return code 1 only when there is one or more error(s).
# See also https://yamllint.readthedocs.io/en/stable/configuration.html#errors-and-warnings
#

extends: default

rules:
  braces:
    level: warning
    max-spaces-inside: 1
  brackets:
    level: warning
    max-spaces-inside: 1
  colons:
    level: warning
  commas:
    level: warning
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    level: warning
  hyphens:
    level: warning
  indentation:
    level: warning
    indent-sequences: consistent
  line-length:
    max: 150
    level: warning
    allow-non-breakable-inline-mappings: true
  trailing-spaces: disable
  truthy: disable
